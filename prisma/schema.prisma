datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Track {
  id        Int      @id @default(autoincrement())
  title     String
  artist    String
  album     String?  // Альбом, если есть
  imageUrl  String?  // URL обложки, если есть
  filename  String   @unique
  createdAt DateTime @default(now())
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  profileImageUrl  String? 
  password String
  favorites Favorite[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Favorite {
  id      Int     @id @default(autoincrement())
  trackId Int  // идентификатор трека, который добавляется в избранное
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  createdAt DateTime @default(now())
}



